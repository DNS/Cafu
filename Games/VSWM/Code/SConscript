import os, sys

Import('env', 'buildMode', 'GameLib')

gameEnv = env.Clone()

# GameLib is just a string with the name of the game, e.g. "VSWM".
# We use it so that a new game can easily be started as a copy of an existing game:
# For example, if Games/VSWM/ is copied to Games/MyGame/, the value of GameLib
# will be the string "VSWM" for game VSWM, and "MyGame" for MyGame.
#
# NOTE: VSWM is obsolete, it should not be used as a basis for new games!
#       Use DeathMatch instead.
gameEnv.Append(CPPDEFINES=[("GAME_NAME", GameLib)]);

gameEnv.StaticLibrary(GameLib, Glob("*.cpp")+Split("Libs/IntMatrix.cpp Libs/LookupTables.cpp"))
