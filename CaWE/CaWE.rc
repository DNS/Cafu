#include "wx/msw/wx.rc"


// ************************
// *** Application Icon ***
// ************************

// Note that if the icon name "aaaa" is changed here, it must also be changed in C++ code!
// This is because this icon is also used as the parent-frame icon.
aaaa ICON "res\\CaWE-icon.ico"


// ***************************
// *** Version Information ***
// ***************************

VS_VERSION_INFO VERSIONINFO
