            VALUE "CompanyName", "Carsten Fuchs Software"
            VALUE "FileDescription", "The Cafu World Editor application"
            VALUE "FileVersion", "1.0.0.0"
            VALUE "InternalName", "CaWE"
            VALUE "LegalCopyright", "Copyright © 2002-2010 Carsten Fuchs Software"
            VALUE "OriginalFilename", "CaWE.exe"
            VALUE "ProductName", "CaWE - Cafu World Editor"
            VALUE "ProductVersion", "1.0.0.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
